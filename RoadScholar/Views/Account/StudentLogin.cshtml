@using RoadScholar.Models
@model StudentLoginViewModel
@{
    ViewBag.Title = Resources.StudentLogin;
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Index", "Student", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                <div id="alertPlace">

                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Room, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Room, new { @class = "form-control", @type = "number", @min = "0", @step = "1" })
                        @Html.ValidationMessageFor(m => m.Room, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value=@Resources.Login class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

<script>
    var alertMessage = "@TempData["alertMessage"]";
    if(alertMessage.length > 0){
        $("#alertPlace").html("<div class='alert alert-danger'>".concat(alertMessage).concat("</div>"));
    }
    var alertSuccessMessage = "@TempData["alertSuccessMessage"]";
    if (alertSuccessMessage.length > 0) {
        $("#alertPlace").html("<div class='alert alert-success'>".concat(alertSuccessMessage).concat("</div>"));
    }
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}