@model RoadScholar.Models.AmericanQuestion

@{
    ViewBag.Title = Resources.CreateAmericanQuestion;
}

<h2>@Resources.CreateAmericanQuestion</h2>

<hr />

@using (Html.BeginForm("SaveAmericanQuestion", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    @Html.Hidden("ExpID", TempData["ExpID"]);

    @Html.ValidationSummary("", new { @class = "text-danger" })


    <form class="form-horizontal">
        <fieldset>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="activityNameTextBox">@Resources.EnterTheNameOfTheActivity</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.ActivityName, new { @class = "form-control" })
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="">@Resources.EnterYourQuestion</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.question, new { @class = "form-control" })
                </div>
            </div>

            <!-- Multiple Radios (inline) -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="">@Resources.EnterTheCorrectAnswer</label>
                <div class="col-md-4">
                    <label class="radio-inline" for="-0">
                        @Html.RadioButtonFor(m => m.correctAnswer, 1)
                        1
                    </label>
                    <br />
                    <label class="radio-inline" for="-1">
                        @Html.RadioButtonFor(m => m.correctAnswer, 2)
                        2
                    </label>
                    <br />
                    <label class="radio-inline" for="-2">
                        @Html.RadioButtonFor(m => m.correctAnswer, 3)
                        3
                    </label>
                    <br />
                    <label class="radio-inline" for="-3">
                        @Html.RadioButtonFor(m => m.correctAnswer, 4)
                        4
                    </label>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="">@Resources.FirstAnswer</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.firstAnswer, new { @class = "form-control" })
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="">@Resources.SecondAnswer</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.secondAnswer, new { @class = "form-control" })
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="">@Resources.ThirdAnswer</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.thirdAnswer, new { @class = "form-control" })
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="">@Resources.FourthAnswer</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.fourthAnswer, new { @class = "form-control" })
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="">@Resources.Explaination</label>
                <div class="col-md-4">
                    @Html.TextAreaFor(m => m.explaination, 5, 1,  new { @class = "form-control" })
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="submitAmericanQuestionButton"></label>
                <div class="col-md-4">
                    <button id="submitAmericanQuestionButton" name="submitAmericanQuestionButton" class="btn btn-primary">@Resources.CreateQuestion</button>
                </div>
            </div>

        </fieldset>
    </form>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}