@model RoadScholar.Models.Image


@{
    ViewBag.Title = "CreateImage";
}

<h2>CreateImage</h2>

@using (Html.BeginForm("SaveImage", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("ExpID", TempData["ExpID"]);

    @Html.ValidationSummary("", new { @class = "text-danger" })


    <!-- Text input-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="activityNameTextBox">@Resources.EnterTheNameOfTheImage</label>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.ActivityName, new { @class = "form-control" })
        </div>
    </div>

    <!-- Text input-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="activityNameTextBox">@Resources.EnterTheTitle</label>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>

    <!-- Text input-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="activityNameTextBox">@Resources.EnterTheImageURL</label>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.URL, new { @class = "form-control" })
        </div>
    </div>

    <!-- Button -->
    <div class="form-group">
        <label class="col-md-4 control-label" for="submitInstructionButton"></label>
        <div class="col-md-4">
            <button id="submitInstructionButton" name="submitInstructionButton" class="btn btn-primary">@Resources.Submit</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}